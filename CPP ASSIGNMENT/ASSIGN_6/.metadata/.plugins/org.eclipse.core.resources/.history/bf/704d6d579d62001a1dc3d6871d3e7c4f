#include "circle.h"

circle::circle() {
	this->radius=0;
}

circle::circle(float radius)
{
	this->radius = radius;
}
float circle::get_radius()
{
	return this->radius;
}
void circle::set_radius(float radius)
{
	this->radius=radius;
}
void circle::accept()
{
	cout<<"ENTER RADIUS OF CIRCLE :";
}
void circle::display();
float circle::calc_area();
float circle::calc_peri();

