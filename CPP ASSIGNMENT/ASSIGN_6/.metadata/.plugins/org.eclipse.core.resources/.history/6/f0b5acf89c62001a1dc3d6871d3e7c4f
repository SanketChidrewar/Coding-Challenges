#ifndef CIRCLE_H_
#define CIRCLE_H_
#include"shape.h"

class circle : public shape {
public:
	circle();

	circle(float radius);
	float get_radius();
	void set_radius(float radius);
	void accept()=0;
	void display()=0;
	float calc_area()=0;
	float calc_peri()=0;

	virtual ~circle();
};

#endif /* CIRCLE_H_ */
