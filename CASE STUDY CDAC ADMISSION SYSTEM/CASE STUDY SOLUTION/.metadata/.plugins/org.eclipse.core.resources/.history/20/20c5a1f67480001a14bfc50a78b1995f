#ifndef CENTER_H_
#define CENTER_H_

#include "Course.h"
#include<vector>

using namespace std;

class Center {
private:
	char id[20];
	char name[50];
	char address[50];
	char coordinator[50];
	char password[20];

	vector<Course> courses;

public:
	Center();
	Center(char* id, char* name, char* address, char* coordinator, char* password, vector<Course> courses);

	const char* getAddress() const;
	void setAddress(char* address);

	const char* getCoordinator() const;
	void setCoordinator(char* coordinator);

	const char* getId() const;
	void setId(char* id);

	const char* getName() const;
	void setName(char* name);

	const char* getPassword() const;
	void setPassword(char* password);

	const vector<Course>& getCourses() const;
	void setCourses(const vector<Course>& courses);

	void display_Center_with_courses();

	void add_courses_in_center();

	virtual ~Center();

};

#endif /* CENTER_H_ */
