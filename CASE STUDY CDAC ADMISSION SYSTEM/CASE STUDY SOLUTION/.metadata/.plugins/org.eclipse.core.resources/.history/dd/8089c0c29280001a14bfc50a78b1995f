#include "courses.h"
#include<cstring>
#include<iostream>
using namespace std;

courses::courses() {
	// TODO Auto-generated constructor stub
	this->id=0;
	this->fees=0;
	strcpy(this->name," ");
	this->section = ' ';
}
courses::courses(int id, char* name, double fees, char section)
{
	this->id=id;
	this->fees=fees;
	strcpy(this->name,name);
	this->section = section;
}

double courses::getFees() const {
	return fees;
}
void courses::setFees(double fees) {
	this->fees = fees;
}

int courses::getId() const {
	return id;
}
void courses::setId(int id) {
	this->id = id;
}

const char* courses::getName() const {
	return name;
}
void courses::setName(char* name)
{
	strcpy(this->name,name);
}


char courses::getSection() const {
	return section;
}
void courses::setSection(char section) {
	this->section = section;
}

void courses::display_coursess()
{
	cout<<this->id<<" "<<this->name<<" "<<this->fees<<" "<<this->section<<endl;
}


courses::~courses() {
	// TODO Auto-generated destructor stub
}

