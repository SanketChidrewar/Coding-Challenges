#ifndef COURSES_H_
#define COURSES_H_

class courses {
private:
	int id;
	string name[50];
	double fees;
	string section;
public:
	courses();
	courses(int id, string name, double fees, string section);
	double getFees() const;
	void setFees(double fees);
	int getId() const;
	void setId(int id);
	const char* getName() const;
	void setName(char* name);
	char getSection() const;
	void setSection(char section);

	void display_courses();

	virtual ~courses();
};

#endif /* COURSES_H_ */
