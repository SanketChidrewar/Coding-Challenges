#include<iostream>
#include<fstream>
#include<sstream>

#include "Student.h"
#include "Center.h"
#include "Course.h"

#include "AdmissionSystem.h"
#include "capacities.h"
#include "courses.h"

using namespace std;

void load_all_students_with_there_preference(AdmissionSystem& a,vector<Student>& stud)
{
	for(unsigned i=0;i<a.student.size();i++)
	{
		stud[i].setId(a.student[i].getId());
		stud[i].setName(a.student[i].getName());
		stud[i].setRankA(a.student[i].getRankA());
		stud[i].setRankB(a.student[i].getRankB());
		stud[i].setRankC(a.student[i].getRankC());
		stud[i].setDegree(a.student[i].getDegree());
		stud[i].setDegreeMarks(a.student[i].getDegreeMarks());
		stud[i].setAllocatedPref(a.student[i].getAllocatedPref());
		stud[i].setCourseName(a.student[i].getCourseName());
		stud[i].setCenterId(a.student[i].getCenterId());
		stud[i].payment = a.student[i].getPayment());
		stud[i].reported = a.student[i].reported;
		stud[i].prn = a.student[i].prn;

		for(int j=0;j<a.preferences.size();j++)
		{
			if(a.student[i].id == a.preferences[j].id)
			{
				stud[i].add_preferences(a.preferences[j]);
			}
		}

		Student s;


	}

}


int main()
{
	AdmissionSystem a;
	a.load_Files(a);

	vector<Student> stud;
	load_all_students_with_there_preference(a,stud);





	return 0;
}


