#include "Center.h"
#include<cstring>
#include<iostream>
using namespace std;

Center::Center() {
	// TODO Auto-generated constructor stub

	strcpy(this->id," ");
	strcpy(this->name," ");
	strcpy(this->address," ");
	strcpy(this->coordinator," ");
	strcpy(this->password," ");

	this->course = {};

}
Center::Center(char* id, char* name, char* address, char* coordinator, char* password, vector<courses> course)
{
	strcpy(this->id,id);
	strcpy(this->name,name);
	strcpy(this->address,address);
	strcpy(this->coordinator,coordinator);
	strcpy(this->password,password);

	this->course = course;
}

const char* Center::getAddress() const {
	return address;
}
void Center::setAddress(char* address)
{
	strcpy(this->address,address);
}


const char* Center::getCoordinator() const {
	return coordinator;
}
void Center::setCoordinator(char* coordinator)
{
	strcpy(this->coordinator,coordinator);
}

const vector<courses>& Center::getCourses() const {
	return course;
}
void Center::setCourses(const vector<Course>& courses) {
	this->courses = courses;
}

const char* Center::getId() const {
	return id;
}
void Center::setId(char* id)
{
	strcpy(this->id,id);
}


const char* Center::getName() const {
	return name;
}
void Center::setName(char* name)
{
	strcpy(this->name,name);
}

const char* Center::getPassword() const {
	return password;
}
void Center::setPassword(char* password)
{
	strcpy(this->password,password);
}

void Center::display_Center_with_courses()
{
	cout<<endl<<this->id<<" "<<this->name<<" "<<this->address<<" "<<this->coordinator<<" "<<this->password<<endl;
	cout<<"COURSES UNDER THIS CENTER ARE :"<<endl;
	for(unsigned int i=0;i<this->courses.size();i++)
	{
		this->courses[i].display_courses();
	}
}

void Center::add_courses_in_center(Course c)
{
	this->courses.push_back(c);
}


Center::~Center() {
	// TODO Auto-generated destructor stub
}

